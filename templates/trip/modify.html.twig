{% extends 'base.html.twig' %}

{% block title %}
    Modifier une sortie | {{ parent() }}
{% endblock %}

{% block body %}

    <h3>Modifier <span class="titre_second">une sortie</span></h3>

    {{ form_start(tripForm) }}

    <div class="label-align">
    {{ form_row(tripForm.name) }}
    {{ form_row(tripForm.dateStartTime, {'attr': {'class': "date-heure"}}) }}
    {{ form_row(tripForm.duration) }}
    {{ form_row(tripForm.registrationDeadline, {'attr': {'class': "date"}}) }}
    {{ form_row(tripForm.maxRegistrations) }}
    {{ form_row(tripForm.tripInfos) }}
    {{ form_row(tripForm.place) }}
    </div>

    <div class="btn_container">
    {{ form_row(tripForm.enregistrer) }}
    {{ form_row(tripForm.publier_la_sortie)}}
    {{ form_row(tripForm.supprimer_la_sortie) }}

    {{ form_end(tripForm) }}

    <a href="{{ path('main_index') }}" title="Annuler la crÃ©ation de sortie">
        <button class="btn">Annuler</button>
    </a>
    </div>

{% endblock %}



