                {% endif %}
                <li><a {% if app.request.get('_route') == 'user_profile' %} class="active"{% endif %} href="{{ path('user_profile', {'id': app.user.id}) }}">Mon profil
                        <cite>({{ app.user.nickname }})</cite></a></li>
                <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
            </ul>
        {% endif %}
    </nav>
</div>

