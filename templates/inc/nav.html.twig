{% set ADMIN = 'ROLE_ADMIN' %}

<div class="menu_container">
    <a href="{{ path('main_index') }}"><img class="logo" src="{{ asset('img/logo_eni.png') }}" alt="Sortir"></a>

    <nav>

        {% if app.user %}

            <ul>
                <li><a {% if app.request.get('_route') == 'main_index' %} class="active"{% endif %} href="{{ path('main_index') }}">Accueil</a></li>
                {% if is_granted(ADMIN) %}
                    <li><a {% if app.request.get('_route') == 'city_list' %} class="active"{% endif %} href="{{ path('city_list') }}">Villes</a></li>
                    <li><a {% if app.request.get('_route') == 'admin_site_list' %} class="active"{% endif %} href="{{ path('admin_site_list') }}">Campus</a></li>
